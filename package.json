{
  "name": "nextn",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cd frontend && next dev --turbopack -p 9002",
    "genkit:dev": "cd frontend && genkit start -- node src/ai/dev.js",
    "genkit:watch": "cd frontend && genkit start -- node --watch src/ai/dev.js",
    "build": "cd frontend && NODE_ENV=production next build",
    "start": "cd frontend && next start",
    "lint": "cd frontend && next lint",
    "test": "cd frontend && jest --config jest.config.js --runInBand",
    "test:watch": "cd frontend && jest --config jest.config.js --watch --runInBand",
    "test:coverage": "cd frontend && jest --config jest.config.js --coverage --runInBand",
    "test:docker:build": "docker build -t tutorvirtual-tests -f Dockerfile .",
    "test:docker": "docker compose -f docker-compose.yml run --rm tests",
    "test:docker:mongo": "docker compose -f docker-compose.yml up --abort-on-container-exit --exit-code-from tests-mongo tests-mongo",
    "app:docker:build": "docker build -t tutorvirtual-app -f Dockerfile.app .",
    "app:docker:up": "docker compose -f docker-compose.app.yml up --build",
    "app:docker:down": "docker compose -f docker-compose.app.yml down",
    "cypress:open": "npx cypress open",
    "cypress:run": "npx cypress run"
  },
