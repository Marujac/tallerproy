# Copy this file to `.env` and fill values

# Gemini API (optional for Genkit / GoogleAI)
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# Auth/JWT
AUTH_SECRET=change_me_to_a_long_random_string

# Demo auth (set 1 to allow login without DB while developing)
DEMO_AUTH=0

# MongoDB
MONGODB_URI=mongodb+srv://USER:PASSWORD@CLUSTER.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=tutorcritico

