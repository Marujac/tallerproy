{
  "info": {"name": "Auth - Verificar Token", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"},
  "item": [
    {
      "name": "Verificar Token",
      "event": [
        {"listen": "test", "script": {"type": "text/javascript", "exec": [
          "pm.test('status 200 o 401', () => pm.expect([200,401]).to.include(pm.response.code));",
